FROM pinpointdocker/pinpoint-flink:latest

ENV SPRING_PROFILES_ACTIVE=release
ENV HBASE_ZOOKEEPER_QUORUM=hbase
ENV KAFKA_BOOTSTRAP_SERVERS=kafka-1:9092,kafka-2:9093,kafka-3:9094
ENV SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/pinpoint?useSSL=false
ENV SPRING_DATASOURCE_USERNAME=root
ENV SPRING_DATASOURCE_PASSWORD=1234

ENTRYPOINT ["/start-flink-job.sh"]